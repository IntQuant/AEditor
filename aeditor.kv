#:import get l18n.get
#:import get_int l18n.get_int

<Label>:
    font_name: 'FreeSansOblique.ttf'

<VisualSnippet>:
	rows:1
	cols:2
	size: 100, 100
	size_hint_x: None
	size_hint_y: None
	
	conn_area: conn_area
	
	canvas:
		Color:
			rgba: 0.5, 0.5, 0.5, 0.75
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: "vertical"
		id: conn_area		
		Button: 
			text: root.get_snippet_name()
			size_hint_y: None
			height: 20
			on_press: root.editor.remove_snippet(root)
		
			

<VisualEditor>:
	grid_lay: box_lay
	snippet_area: fl_lay
	ScrollView:
		pos: root.pos
		width: 200
		size_hint_x: None
		do_scroll_x: False
		BoxLayout:
			id: box_lay
			height: 10
			size_hint_y: None
			orientation: "vertical"


	StencilView:
		pos: root.pos
		FloatLayout:
			size: root.size
			canvas:
				Color:
					rgba: 1, 1, 1, 0.25*0.5
				Rectangle:
					pos: self.pos
					size: self.size
			pos: root.pos
			id: fl_lay
			#VisualSnippet:
			#	pos: 200, 200


<MainWidget>:
	GridLayout:
		size: root.width, root.height
		rows: 2
		cols: 1
		BoxLayout:
			orientation: "horizontal"
			
			size_hint_y: None
			height: 60
			
			GridLayout:
				size_hint_x: None
				width: get_int("fileworks_panel_width", default=200)
				rows: 2
				cols: 3
				Button:
					text: get("New")
					size_hint_x: 0.3333
					size_hint_y: 0.5
				Button:
					text: get("Save")
					size_hint_x: 0.3333
					size_hint_y: 0.5
				Button:
					text: get("Compile")
					size_hint_x: 0.3333
					size_hint_y: 0.5
				Button:
					text: get("Load")
					size_hint_x: 0.3333
					size_hint_y: 0.5
				Button:
					text: get("Save As")
					size_hint_x: 0.3333
					size_hint_y: 0.5
				Button:
					text: get("Run")
					size_hint_x: 0.3333
					size_hint_y: 0.5
			Button:
				text: ""
				size_hint_x: 0.1
		TabbedPanel:
			tab_pos: "bottom_left"
			default_tab: tpi_0
			TabbedPanelItem:
				text: "File Chooser"
				id: tpi_0
				FileChooserIconView:
					id: filechooser
			TabbedPanelItem:
				text: "1"
				index: 10
				VisualEditor:
					id: visual_ed
			TabbedPanelItem:
				text: "2"
			
			
